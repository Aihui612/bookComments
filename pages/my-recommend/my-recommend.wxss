  line-height: 40rpx;
}
.container .recommend-card .split-line {
  width: 2rpx;
  height: 116rpx;
  margin: 38rpx 0rpx;
  border: 1rpx solid #EFEFF4;
}
.container .recommend-container .no-recommend {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.container .recommend-container .no-recommend .no-icon {
  width: 252rpx;
  height: 252rpx;
  background-color: #efeff4;
  margin: 286rpx 248rpx 92rpx 250rpx;
}
.container .recommend-container .no-recommend .no-tip {
  width: 364rpx;
