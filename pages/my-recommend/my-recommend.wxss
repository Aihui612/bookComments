  justify-content: center;
  align-items: center;
  margin-top: 234rpx;
}
.container .foot .bottom-line {
  width: 268rpx;
  height: 10rpx;
  background: #000000;
  border-radius: 200rpx;
  margin: 0rpx 0rpx 18rpx 0rpx;
}
