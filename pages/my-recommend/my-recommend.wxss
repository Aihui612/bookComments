  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.container .recommend-card .recommend-book .recommend-num {
  width: auto;
  height: 56rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 56rpx;
}
.container .recommend-card .recommend-book .recommend-type {
  width: 112rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 40rpx;
}
.container .recommend-card .recommend-vedio {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.container .recommend-card .recommend-vedio .recommend-num {
  width: auto;
  height: 56rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 56rpx;
}
.container .recommend-card .recommend-vedio .recommend-type {
  width: 112rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
