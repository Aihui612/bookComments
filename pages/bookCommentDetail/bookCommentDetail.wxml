<!--pages/bookCommentDetail/bookCommentDetail.wxml-->
<view class="container">
	

	<scroll-view scroll-y="true" style='height: {{scrollHeight + "rpx"}}'>
		<view class="book-card">
						
							<cover-image
					                class="cover-image"
					                src="{{bookInfo.picture}}"
					                bindload="imageLoad"
					                binderror="imageError">
					            </cover-image>
								<view class="info-detail">
									<text class="name">《{{bookInfo.name}}》</text>
							        <commentStars  model:stars="{{bookInfo.stars}}"></commentStars>
									<text class="commentsNum">{{bookInfo.scorer}}人评分</text>
									<view class="info-obj" wx:if="{{bookInfo.authors.author.length>0}}">
										<view class="info-key ">作者<text></text></view>:
										<block wx:for="{{bookInfo.authors.author}}" wx:key="*this">
											<text class="info-value" style="margin-right: 5rpx;" data-id="{{item.author.id}}" bindtap="handleAuthorDetail" >{{item.author.name}} </text>
										</block>
									</view>
									<view class="info-obj" wx:if="{{bookInfo.authors.translators.length>0}}">
										<view class="info-key ">译者<text></text></view>:
										<block wx:for="{{bookInfo.authors.translators}}" wx:key="*this">
											<text class="info-value"  style="margin-right: 5rpx;" data-id="{{item.author.id}}" bindtap="handleAuthorDetail" >{{item.author.name}} </text>
										</block>
									</view>
									<view class="info-obj">
										<view class="info-key ">类别<text></text></view>:
										<text class="info-value" data-catename="{{bookInfo.category.name}}" data-id="{{bookInfo.category.id}}" bindtap="handleCategoryDetail">{{bookInfo.category.name}}</text>
									</view>
									<view class="info-obj">
										<view class="info-key">出版社<text></text></view>:
										<text class="info-value" data-id="{{bookInfo.press.id}}" bindtap="handlePressDetail" >{{bookInfo.press.name}}</text>
									</view>
									<view class="info-obj">
										<view class="info-key">出版年份<text></text></view>:
										<text class="info-value">{{bookInfo.publication}}</text>
									</view>
									
								</view>
								<text class="cuIcon-right lg text-gray"  data-id="{{bookInfo.id}}"  bindtap="handleBookDetail"></text>
					</view>
			
			<view  class="top-comment">
				<view class="card-item">
					<view class="card-item-title">
								  <view class="avatar">
									<cover-image
									                class="cover-image"
									                src="{{item.userInfo.avatarUrl}}"
									                bindload="imageLoad"
									                binderror="imageError">
									            </cover-image>
								  </view>
								  <view class="basicinfo">
									  <view>
										  <text class="name">{{item.userInfo.nickName}}</text>
										
										  <block wx:if="{{item.forward==true}}">
										  		<text class="notice">转发</text>
										  </block>
										  <block  wx:if="{{item.readBook==true&&item.forward==false}}">
										  		 <text class="notice">已读</text>
										  </block>
									  </view>
									  <view class="time-star">
									  		<text class="time">{{item.createTime}}</text>
											<commentStars  model:stars="{{item.bookInfo.stars}}"></commentStars>
									  </view>
								  </view>
								  
					</view>
					
					<view class="content-container">
						<text class="book-topic" wx:if="{{item.title!==null}}">{{item.title}}</text>
							<text class="resume "  >{{item.content}}</text>
					</view>
					
					<view class="releation-container">
								  <view class="releation-info">
									  <text class="releation ">{{item.liked}}有用 · </text>
									  <text class="releation ">{{item.reply}}回复 · </text>
									  <text class="releation ">{{item.forwarding}}转发</text>
									  <text class="cuIcon-right lg text-gray" bindtap="handleCommentDetail"></text>
								  </view>
								  
								
					</view>
				</view>
			</view>
			<view class="more-comment-tip">
				<view class="more-comment">
					更多评论
				</view>
				<view class="comment-num">
					{{commentNum}}条
				</view>
			</view>
			<commentCard model:card-info="{{cardInfoArray}}">
				
			</commentCard>
			<view class="no-more">
				— 到底啦 —
			</view>
			<copyRight model:show-line="{{false}}">
				
			</copyRight>
	</scroll-view>
	<bottom-input>
		
	</bottom-input>
</view>
