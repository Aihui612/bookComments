.container {
  background-color: #f4f4f4;
  align-items: center;
}
.container .filter-container {
  width: 100%;
  height: 176rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 32rpx;
}
.container .filter-container .search-container {
  width: 750rpx;
  height: 128rpx;
  background: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx 30rpx 32rpx 32rpx;
}
.container .filter-container .search-container .search-input {
  width: 688rpx;
  height: 64rpx;
  background-color: #efeff4;
  border-radius: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 16rpx;
}
.container .filter-container .search-container .search-input .placeholder {
  width: auto;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #b8b8b8;
  line-height: 34rpx;
  margin-left: 16rpx;
}
.container .hot-container {
  margin: 46rpx 30rpx 0rpx 32rpx;
  width: 688rpx;
  height: auto;
  background-color: #ffffff;
  border-radius: 20px;
}
.container .hot-container .title-container {
  width: 100%;
  height: 64rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left: 16rpx;
  padding-top: 16rpx;
  padding-right: 22rpx;
}
.container .hot-container .title-container .type {
  width: auto;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #0b0c0d;
  line-height: 39rpx;
}
.container .hot-container .title-container .book-num {
  width: auto;
  height: 40rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #969696;
  line-height: 39rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .hot-container .hot-card {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.container .hot-container .hot-card .split {
  width: 654rpx;
  height: 4rpx;
  background-color: #E2E2E2;
}
.container .hot-container .hot-card .book-detail {
  width: 688rpx;
  height: 320rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx 16rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .hot-container .hot-card .book-detail .book-info {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  flex-grow: 1;
  width: auto;
  height: 256rpx;
}
.container .hot-container .hot-card .book-detail .book-info .reader-info {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .hot-container .hot-card .book-detail .book-info .reader-info .avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}
.container .hot-container .hot-card .book-detail .book-info .reader-info .info {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin-left: 16rpx;
}
.container .hot-container .hot-card .book-detail .book-info .reader-info .info .detail {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .hot-container .hot-card .book-detail .book-info .reader-info .info .detail .name {
  width: auto;
  max-width: 192rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #000000;
  line-height: 34rpx;
  margin-right: 16rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.container .hot-container .hot-card .book-detail .book-info .reader-info .info .detail .notice {
  width: 48rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #969696;
  line-height: 34rpx;
  margin-left: 24rpx;
  margin-right: 16rpx;
}
.container .hot-container .hot-card .book-detail .book-info .reader-info .info .time {
  width: auto;
  height: 26rpx;
  font-size: 18rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #969696;
  line-height: 26rpx;
}
.container .hot-container .hot-card .book-detail .book-info .comments {
  width: 464rpx;
  height: 118rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 39rpx;
  margin-top: 16rpx;
  margin-bottom: 40rpx;
}
.container .hot-container .hot-card .book-detail .book-info .read-more {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}
.container .hot-container .hot-card .book-detail .book-info .releation-container {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: auto;
}
.container .hot-container .hot-card .book-detail .book-info .releation-container .releation-info {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .hot-container .hot-card .book-detail .book-info .releation-container .releation-info .releation {
  width: auto;
  height: 32rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #969696;
  line-height: 32rpx;
}
.container .hot-container .hot-card .book-detail .book-icon {
  width: 176rpx;
  height: 256rpx;
}
.container .scroll-tab {
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 750rpx;
  padding-right: 30rpx;
}
.container .scroll-tab .tabs-nav {
  position: relative;
  display: -webkit-flex;
  display: flex;
  -webkit-user-select: none;
  user-select: none;
  padding: 0rpx 32rpx;
}
.container .scroll-tab .tabs-nav .tabs {
  flex-basis: 22%;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  display: flex;
  text-align: center;
  margin-right: 80rpx;
}
.container .scroll-tab .tabs-nav .tabs .actived-tab {
  width: 112rpx;
  height: 48rpx;
  background-color: #f7f7f7;
  border-radius: 24rpx;
  line-height: 48rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #F96D3D;
}
.container .scroll-tab .tabs-nav .tabs .tab {
  width: auto;
  height: 48rpx;
  line-height: 48rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #666666;
}
