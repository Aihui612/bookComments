.container {
  background-color: #f4f4f4;
  align-items: center;
}
.container .filter-container {
  width: 100%;
  height: auto;
  background-color: #ffffff;
}
.container .filter-container .search-container {
  width: 750rpx;
  height: 128rpx;
  background: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx 30rpx 32rpx 32rpx;
}
.container .filter-container .search-container .search-input {
  width: 688rpx;
  height: 64rpx;
  background-color: #efeff4;
  border-radius: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 16rpx;
}
.container .filter-container .search-container .search-input .placeholder {
  width: auto;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #b8b8b8;
  line-height: 34rpx;
  margin-left: 16rpx;
}
.container .hot-container {
  margin: 32rpx 30rpx 0rpx 32rpx;
  width: 688rpx;
  height: auto;
  background-color: #ffffff;
  border-radius: 20rpx;
}
.container .hot-container .title-container {
  width: 100%;
  height: 64rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left: 16rpx;
  padding-top: 16rpx;
  padding-right: 22rpx;
}
.container .hot-container .title-container .type {
  width: auto;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #0b0c0d;
  line-height: 39rpx;
}
.container .hot-container .title-container .book-num {
  width: auto;
  height: 40rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #969696;
  line-height: 39rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .scroll-tab {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 750rpx;
  padding-right: 30rpx;
  background-color: white;
}
.container .scroll-tab .tabs-nav {
  position: relative;
  display: -webkit-flex;
  display: flex;
  -webkit-user-select: none;
  user-select: none;
  padding: 0rpx 32rpx;
}
.container .scroll-tab .tabs-nav .tabs {
  flex-basis: 22%;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  display: flex;
  text-align: center;
  margin-right: 80rpx;
}
.container .scroll-tab .tabs-nav .tabs .actived-tab {
  width: 112rpx;
  height: 48rpx;
  background-color: #f7f7f7;
  border-radius: 24rpx;
  line-height: 48rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #F96D3D;
}
.container .scroll-tab .tabs-nav .tabs .tab {
  width: auto;
  height: 48rpx;
  line-height: 48rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #666666;
}
