.container {
  background-color: #ffffff;
  height: 100%;
}
.container .top-container {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.container .top-container .author-resume {
  width: 100%;
  padding: 32rpx 30rpx 32rpx 32rpx;
  height: 352rpx;
  background-color: #ffffff;
}
.container .top-container .author-resume .resume-container {
  padding: 16rpx;
  width: 100%;
  height: 288rpx;
  background-color: #f7f7f7;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .top-container .author-resume .resume-container .avatar {
  width: 176rpx;
  height: 256rpx;
}
.container .top-container .author-resume .resume-container .avatar .cover-image {
  width: inherit;
  height: inherit;
}
.container .top-container .author-resume .resume-container .info {
  margin-left: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.container .top-container .author-resume .resume-container .info .name {
  width: auto;
  height: 48rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #000000;
  line-height: 48rpx;
  margin-bottom: 18rpx;
}
.container .top-container .author-resume .resume-container .info .info-item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .top-container .author-resume .resume-container .info .info-item .info-key {
  width: 110rpx;
  height: 32rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.container .top-container .author-resume .resume-container .info .info-item .info-value {
  flex: 1;
  width: auto;
  height: 32rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 32rpx;
}
.container .top-container .author-description {
  width: 100%;
  height: auto;
  background-color: #f7f7f7;
  padding: 32rpx 30rpx 32rpx 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.container .top-container .author-description .title {
  width: 136rpx;
  height: 40rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #0b0c0d;
  line-height: 39rpx;
}
.container .top-container .author-description .description {
  margin-top: 26rpx;
  margin-bottom: 40rpx;
  width: 100%;
  height: auto;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 39rpx;
}
.container .top-container .bottom-tip {
  width: auto;
  height: 32rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #b8b8b8;
  line-height: 32rpx;
  margin: 32rpx auto 48rpx auto;
}
