.container {
  background-color: #f7f7f7;
  height: 100vh;
}
.container .message-top {
  width: 100%;
  height: 176rpx;
  background-color: #f96d3d;
  padding: 24rpx 30rpx 40rpx 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.container .message-top .message-info {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .message-top .message-info .message-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #ffffff;
  margin: 0 20rpx 0 22rpx;
}
.container .message-top .message-info .message-title {
  width: auto;
  height: 56rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #efeff4;
  line-height: 56rpx;
}
.container .message-top .message-info .message-num {
  width: auto;
  height: 56rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #efeff4;
  line-height: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}
.container .message-top .message-icon {
  width: 140rpx;
  height: 112rpx;
  background-color: rgba(229, 228, 229, 0.09);
}
.container .message-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  flex-grow: 1;
}
.container .message-container .message-main {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100vw;
}
.container .message-container .message-main .message-info-container {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: inherit;
  height: inherit;
}
.container .message-container .message-main .message-info-container .message-card {
  width: 100%;
  min-height: 128rpx;
  height: auto;
  margin-top: 32rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding: 16rpx 54rpx 28rpx 32rpx;
}
.container .message-container .message-main .message-info-container .message-card .read-info {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .message-container .message-main .message-info-container .message-card .read-info .date {
  width: auto;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #969696;
  line-height: 34rpx;
  margin-right: 18rpx;
}
.container .message-container .message-main .message-info-container .message-card .read-info .unread {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: linear-gradient(180deg, #f24343 0%, #e02020 100%);
}
.container .message-container .message-main .message-info-container .message-card .info {
  width: auto;
  height: auto;
  margin-top: 14rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 34rpx;
}
.container .message-container .message-main .nomore-tip {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: auto;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #b8b8b8;
  line-height: 34rpx;
  margin: 46rpx 0rpx;
}
.container .message-container .message-main .message-icon {
  width: 267rpx;
  height: 240rpx;
  margin-bottom: 56rpx;
}
.container .message-container .message-main .no-message {
  width: auto;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #b8b8b8;
  line-height: 40rpx;
}
