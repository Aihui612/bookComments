.container {
  background-color: #f7f7f7;
}
.container .comment-box {
  flex-grow: 1;
  flex-shrink: 1;
  flex-basis: 0%;
}
.container .comment-box .comment-card {
  width: 100%;
  height: 192rpx;
  background: #ffffff;
  margin-top: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}
.container .comment-box .comment-card .comment-book {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.container .comment-box .comment-card .comment-book .comment-num {
  width: auto;
  height: 56rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 56rpx;
}
.container .comment-box .comment-card .comment-book .comment-type {
  width: auto;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 40rpx;
}
.container .comment-box .comment-card .comment-vedio {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.container .comment-box .comment-card .comment-vedio .comment-num {
  width: auto;
  height: 56rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 56rpx;
}
.container .comment-box .comment-card .comment-vedio .comment-type {
  width: auto;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 40rpx;
}
.container .comment-box .comment-card .split-line {
  width: 2rpx;
  height: 116rpx;
  margin: 38rpx 0rpx;
  border: 1rpx solid #EFEFF4;
}
.container .comment-box .comment-container .no-comment {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.container .comment-box .comment-container .no-comment .no-icon {
  width: 240rpx;
  height: 288rpx;
  margin: 286rpx 248rpx 92rpx 250rpx;
}
.container .comment-box .comment-container .no-comment .no-tip {
  width: auto;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #b8b8b8;
  line-height: 40rpx;
}
.container .comment-box .comment-container .nomore-tip {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: auto;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #b8b8b8;
  line-height: 34rpx;
  margin: 46rpx 0rpx;
}
.container .comment-box .comment-container .comment-info .comment-type-title {
  width: auto;
  height: 48rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 48rpx;
  margin: 32rpx 0rpx 16rpx 32rpx;
}
.container .comment-box .comment-container .comment-info .not-online {
  background-color: #efeff4 !important;
  box-shadow: 0rpx -2rpx 0rpx 0rpx #efeff4 !important;
}
.container .comment-box .comment-container .comment-info .comment-type-detail {
  width: 100%;
  height: 128rpx;
  background: #ffffff;
  box-shadow: 0rpx -2rpx 0rpx 0rpx #eeeeee;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 36rpx 0 32rpx;
}
.container .comment-box .comment-container .comment-info .comment-type-detail .name-detail {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .comment-box .comment-container .comment-info .comment-type-detail .name-detail .video-resume {
  width: 59rpx;
  height: 59rpx;
}
.container .comment-box .comment-container .comment-info .comment-type-detail .name-detail .name-resume {
  width: 64rpx;
  height: 64rpx;
  background: #517da8;
  border-radius: 10rpx;
  color: white;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.container .comment-box .comment-container .comment-info .comment-type-detail .name-detail .name-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin-left: 32rpx;
}
.container .comment-box .comment-container .comment-info .comment-type-detail .name-detail .name-info .name {
  width: auto;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #0b0c0d;
  line-height: 40rpx;
}
.container .comment-box .comment-container .comment-info .comment-type-detail .name-detail .name-info .unactived {
  color: #969696 !important;
}
.container .comment-box .comment-container .comment-info .comment-type-detail .name-detail .name-info .status {
  width: auto;
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #f96d3d;
  line-height: 28rpx;
}
.container .comment-box .comment-container .comment-info .comment-type-detail .comment-detail {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .comment-box .comment-container .comment-info .comment-type-detail .comment-detail .red-dot {
  width: 12rpx;
  height: 12rpx;
  background: #e02020;
}
.container .comment-box .comment-container .comment-info .comment-type-detail .comment-detail .status {
  width: auto;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 34rpx;
  margin: 0 12rpx;
}
