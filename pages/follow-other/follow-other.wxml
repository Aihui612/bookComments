<!--pages/my-follower/my-follower.wxml-->
<view class="container">
	<view class="follower-container">
		<block wx:if="{{follower.num==0}}">
			<view class="follower-icon">
				<cover-image src="../../images/Icon-heart.png" ></cover-image>
			</view>
			<view class="no-follower">
				每个人都有闪光的点，Ta值得你欣赏
			</view>
		</block>
		<block wx:else>
			<view class="follow-main">
				<block wx:for="{{follower.list}}">
					<view class="follow-list">
						<view class="follow-info">
							<cover-image src="{{item.iconSrc}}"  class="follow-icon"></cover-image>
							<view class="follow-nickname">
								{{item.nickname}}
							</view>
						</view>
						<block wx:if="{{item.follow==-1}}">
							<view class="unfollow">
								<text class="cuIcon-add lg text-white"></text>
								<view class="text">关注</view>
							</view>
						</block>
						<block wx:elif="{{item.follow==0}}">
							<view class="followed">
								<view class="text">互相关注</view>
							</view>
						</block>
						<block wx:else>
							<view class="follow">
								<text class="cuIcon-check lg green"></text>
								<view class="text">已关注</view>
							</view>
						</block>
					
					</view>
				</block>
				<view class="nomore-tip">
					<text>没有更多内容</text>
				</view>
			</view>
		</block>
	</view>
	<copy-right></copy-right>
</view>
