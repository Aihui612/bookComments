.container .comment-text {
  width: 100%;
  height: 576rpx;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-end;
  padding-top: 32rpx;
  padding-left: 32rpx;
}
.container .space-line {
  width: 100%;
  height: 16rpx;
  background-color: #F7F7F7;
}
.container .comment-container {
  width: 750rpx;
  height: 176rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0rpx 30rpx 16rpx 32rpx;
}
.container .comment-container .comment-info {
  width: 688rpx;
  height: 160rpx;
  background-color: #f7f7f7;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: center;
  padding: 16rpx 16rpx 18rpx 16rpx ;
}
.container .comment-container .comment-info .content {
  width: 656rpx;
  height: 78rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 39rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.container .comment-container .comment-info .content .check-more {
  width: 96rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #576b95;
  line-height: 34rpx;
  float: right;
  position: absolute;
  margin-top: -30rpx;
  margin-left: 30px;
}
.container .comment-container .comment-info .avatar-info {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .comment-container .comment-info .avatar-info .avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}
.container .comment-container .comment-info .avatar-info .avatar .cover-image {
  width: inherit;
  height: inherit;
  border-radius: 50%;
}
.container .comment-container .comment-info .avatar-info .name {
  margin-left: 16rpx;
  width: auto;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #000000;
  line-height: 34rpx;
}
