.container {
  background-color: #ffffff;
  height: 100%;
}
.container .top-container {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.container .top-container .cover-image {
  width: 100%;
  height: 288rpx;
  background: #504f47;
}
.container .top-container .list-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  padding: 32rpx 30rpx 0rpx 32rpx;
}
.container .top-container .list-container .No1 {
  background-color: #FB6877;
}
.container .top-container .list-container .No2 {
  background-color: #FF924D;
}
.container .top-container .list-container .No3 {
  background-color: #EAB676;
}
.container .top-container .list-container .No {
  background-color: #A3A3A4;
}
.container .top-container .list-container .top-num {
  width: 80rpx;
  height: 40rpx;
  margin-left: 8px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: white;
}
.container .top-container .list-container .list-card {
  width: 100%;
  height: 384rpx;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.container .top-container .list-container .list-card .book-info {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-end;
}
.container .top-container .bottom-tip {
  width: auto;
  height: 32rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #b8b8b8;
  line-height: 32rpx;
  margin: 32rpx auto 48rpx auto;
}
